

<%= form_with(model: rate, url: admin_path, local: true) do |form| %>

  <% if rate.errors.any? %>
    <div id="error_explanation">
      <h2>Что-то не так с введёнными значениями:</h2>
      <ul>
        <% rate.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <%= form.label :rate, 'Курс', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.number_field :rate, class: 'form-control', step: 0.0001 %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :overwrite, 'До', class: 'col-sm-2 col-form-label' %>
    <div class="col-sm-10">
      <%= form.datetime_field :overwrite, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-2">
    </div>
    <div class="col-sm-8">
      <%= form.submit 'Изменить', class: 'btn btn-primary' %>
      <a class="btn btn-secondary" href="<%= root_path %>" role="button">
        Назад
      </a>
    </div>
  </div>


<% end %>
